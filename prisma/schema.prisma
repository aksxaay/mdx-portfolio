datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  slug      String   @unique
  likes     Int      @default(0)
  views     Int      @default(0)
}

model Session {
  id        String   @id @map("_id")
  createdAt DateTime @default(now())
  likes     Int      @default(0)
}
